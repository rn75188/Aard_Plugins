<triggers>

<trigger
   enabled="n"
   match="{spellheaders}"
   name="slist_start"
   omit_from_output="y"
   sequence="100"
   send_to="14"
>
<send>
   EnableTrigger("capture_slist", true)
   EnableTrigger("slist_end", true)
</send>
</trigger>

<trigger
    enabled="n"
    match="^(\d+),([^,]+),([^,]+),([^,]+),([^,]+),([^,]+),([^,]+)$"
    name="capture_slist"
    omit_from_output="y"
    regexp="y"
    sequence="100"
    send_to="14"
    script="parse_slist"
>
</trigger>

<trigger
   enabled="n"
   match="{/spellheaders}"
   name="slist_end"
   omit_from_output="y"
   sequence="100"
   send_to="14"
>
<send>
   start_practice()
   EnableTrigger("slist_start", false)
   EnableTrigger("slist_end", false)
   EnableTrigger("capture_slist", false)
